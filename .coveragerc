[run]
# source = ppft
include =
    */ppft/*
    */ppft/server/*
omit = 
    */examples/*
    */tests/*
    */pp/*
    */pp/server/*
branch = true
# timid = true
# parallel = true
# concurrency = multiprocessing # thread
# data_file = $TRAVIS_BUILD_DIR/.coverage
# data_file = ./.coverage
# debug = trace

[paths]
source =
    ppft
    ppft/server
    */site-packages/ppft
    */site-packages/ppft/server
    */site-packages/ppft-*/ppft
    */site-packages/ppft-*/ppft/server

[report]
include =
    */ppft/*
    */ppft/server/*
exclude_lines =
    pragma: no cover
    raise NotImplementedError
    if __name__ == .__main__.:
# show_missing = true
ignore_errors = true
# pragma: no branch
# noqa
